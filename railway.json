{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile"
  },
  "deploy": {
    "startCommand": "python -m app.main",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  },
  "cronJobs": [
    {
      "name": "ingestion-worker",
      "schedule": "0 * * * *",
      "command": "python -m app.main --mode=ingestion",
      "environment": {
        "WORKER_MODE": "ingestion"
      }
    },
    {
      "name": "processing-worker",
      "schedule": "*/15 * * * *",
      "command": "python -m app.main --mode=processing",
      "environment": {
        "WORKER_MODE": "processing"
      }
    },
    {
      "name": "features-worker",
      "schedule": "*/15 * * * *",
      "command": "python -m app.main --mode=features",
      "environment": {
        "WORKER_MODE": "features"
      }
    }
  ]
}

